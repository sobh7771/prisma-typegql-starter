{
  "name": "prisma-typegql-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node --require dotenv/config dist/",
    "build": "tsc --build --clean && tsc",
    "dev": "pnpm ts-node-dev --respawn src/",
    "gen": "pnpm prisma generate --schema src/prisma/schema.prisma",
    "gen:dev": "pnpm prisma generate --schema src/prisma/schema.prisma --watch",
    "db-push": "pnpm prisma db push --schema src/prisma/schema.prisma",
    "prisma-format": "pnpm prisma format --schema src/prisma/schema.prisma",
    "lint": "pnpm eslint .",
    "lint:fix": "pnpm eslint . --fix",
    "prepare": "husky install",
    "postinstall": "pnpm gen && pnpm db-push"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/graphql-fields": "^1.3.5",
    "@types/node": "^18.16.3",
    "@types/ramda": "^0.29.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "install-peers": "^1.0.4",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prisma": "^4.13.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig.json": "^1.0.11",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@apollo/server": "^4.7.0",
    "@prisma/client": "^4.13.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^15.8.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.21.3",
    "ramda": "^0.29.0",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.5.0",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typegraphql-prisma": "^0.25.0"
  }
}
